// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  COMPLETED
  INPROGRESS
  PENDING
}

model Todo {
  id Int @default(autoincrement()) @id
  name String
  description String
  expires Int
  isCompleted Boolean
  status Status
}